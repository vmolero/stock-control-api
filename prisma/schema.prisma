generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Tenant {
  id    String    @id
  name  String
  items Item[]
}

model Item {
  id        Int     @id @default(autoincrement())
  tenantId  String
  title     String
  description String
  picture   String
  sku       String
  quantity   Int @default(0)
  deleted   Boolean @default(false)
  tenant    Tenant  @relation(fields: [tenantId], references: [id])
}